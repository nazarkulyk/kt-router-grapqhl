{
  "editor.formatOnSave": false,
  "files.exclude": {
    "**/.DS_Store": true,
    "**/node_modules/": true,
    "**/build/**/*.js.map": {
      "when": "$(basename).js"
    },
    "**/build/**/*.js": {
      "when": "$(basename).ts"
    }
  },
  "search.exclude": {
    "build": true,
    "node_modules": true
  },
  "eslint.validate": [
    "javascript",
    "typescript"
  ],
  "[json]": {
    "editor.formatOnSave": true,
  },
  "[html]": {
    "editor.formatOnSave": true,
  },
  "eslint.workingDirectories": [
    {"directory": "packages/kt-router-graphql-api", "changeProcessCWD": true },
    {"directory": "packages/kt-router-graphql-web", "changeProcessCWD": true }
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.tslint": false
  }
}